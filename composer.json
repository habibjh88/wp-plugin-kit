{
	"name": "therakib7/wp-plugin-kit",
	"description": "A starter plugin for WordPress that provides a foundational structure to build upon.",
	"version": "0.1.0",
	"license": "GPL-3-or-later",
	"authors": [
		{
			"name": "WpPluginKit",
			"email": "therakib7@gmail.com"
		}
	],
	"require": {
		"php": "^7.4 || ^8.0"
	},
	"require-dev": {
		"wp-coding-standards/wpcs": "^3.0",
		"tareq1988/wp-php-cs-fixer": "dev-master",
		"phpcompatibility/phpcompatibility-wp": "dev-master",
		"wp-phpunit/wp-phpunit": "dev-master",
		"yoast/phpunit-polyfills": "^1.0"
	},
	"autoload": {
		"psr-4": {
			"WpPluginKit\\": "includes",
			"WpPluginKit\\Tests\\": "tests/phpunit"
		}
	},
	"scripts": {
		"phpcs": [
			"phpcs -ps"
		],
		"phpcbf": [
			"phpcbf -p"
		],
		"test": [
			"phpunit"
		],
		"test:all": [
			"phpcs -ps & phpunit"
		]
	},
	"minimum-stability": "dev",
	"config": {
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true
		}
	}
}